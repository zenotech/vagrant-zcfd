    ln -sF intel64_lin install/intel/compiler/lib/intel64
    cp -rfL "$( dirname "$INTEL_COMPILER" )"/../../mkl install/intel
    cp -rfL "$( dirname "$INTEL_COMPILER" )"/../../mpi install/intel
